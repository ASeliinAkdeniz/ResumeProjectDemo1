@model List<ResumeProjectDemo1.Entities.About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-5xl mx-auto">
        <div class="mb-8 text-center sm:text-left">
            <h3 class="text-3xl font-black tracking-tight">Hakkımda Paneli</h3>
            <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Kişisel bilgilerinizi ve profil detaylarınızı buradan yönetebilirsiniz.</p>
        </div>

        @foreach (var item in Model)
        {
            <div class="bg-white dark:bg-[#111618] rounded-2xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-xl flex flex-col md:flex-row min-h-[450px]">

                <div class="md:w-1/2 relative group overflow-hidden">
                    <img src="@item.ImageUrl" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" alt="@item.NameSurnname"
                         onerror="this.src='https://placehold.co/600x800?text=Profil+Fotoğrafı'" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex items-end p-6">
                        <p class="text-white text-sm italic">Profil Görseli</p>
                    </div>
                </div>

                <div class="md:w-1/2 p-8 md:p-12 flex flex-col justify-center">
                    <div class="space-y-6">
                        <div>
                            <span class="inline-block px-3 py-1 bg-primary/10 text-primary text-xs font-bold rounded-full mb-3 uppercase tracking-widest">
                                Yönetici Profili
                            </span>
                            <h1 class="text-4xl font-black text-slate-800 dark:text-white leading-tight">
                                @item.NameSurnname
                            </h1>
                            <p class="text-xl font-medium text-primary mt-2">@item.Title</p>
                        </div>

                        <div class="h-px bg-slate-100 dark:bg-[#3b4d54] w-20"></div>

                        <p class="text-slate-600 dark:text-[#9db2b9] leading-relaxed italic">
                            "@item.Description"
                        </p>

                        <div class="pt-8 flex flex-wrap gap-4">
                            <a href="/About/UpdateAbout/@item.AboutId/" class="flex items-center gap-2 px-8 py-3 bg-primary text-background-dark rounded-xl font-bold text-sm hover:shadow-lg hover:shadow-primary/20 transition-all active:scale-95">
                                <span class="material-symbols-outlined text-[20px]">edit_note</span>
                                Bilgileri Düzenle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

