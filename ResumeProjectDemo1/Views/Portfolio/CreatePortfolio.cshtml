@model ResumeProjectDemo1.Entities.Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <h3 class="text-3xl font-black tracking-tight">Yeni Proje Ekle</h3>

        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-8 shadow-sm">
            <form method="post" class="space-y-6">
                <div>
                    <label class="block text-sm font-bold mb-2">Proje Başlığı</label>
                    <input type="text" asp-for="Title" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none" placeholder="Proje adını giriniz..." required />
                </div>

                <div>
                    <label class="block text-sm font-bold mb-2">Görsel URL</label>
                    <input type="text" asp-for="ImageURl" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none" placeholder="https://resim-url.com/resim.jpg" required />
                </div>

                <div class="flex items-center gap-3 pt-6 border-t border-slate-200 dark:border-[#3b4d54]">
                    <button type="submit" class="px-6 py-3 bg-primary text-background-dark rounded-lg font-bold text-sm">Projeyi Oluştur</button>
                    <a href="/Portfolio/PortfolioList/" class="px-6 py-3 bg-slate-100 dark:bg-[#1c2427] rounded-lg font-bold text-sm">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>