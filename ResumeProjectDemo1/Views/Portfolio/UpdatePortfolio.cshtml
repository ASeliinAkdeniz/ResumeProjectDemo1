@model ResumeProjectDemo1.Entities.Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center gap-4">
            <a href="/Portfolio/PortfolioList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <h3 class="text-3xl font-black tracking-tight">Projeyi Güncelle</h3>
        </div>

        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-8 shadow-sm">
            <form method="post" class="space-y-6">
                <input type="hidden" asp-for="PortfolioId" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-bold mb-2">Proje Başlığı <span class="text-red-500">*</span></label>
                        <input type="text" asp-for="Title" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 outline-none" required />
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-2">Görsel URL (ImageUrl) <span class="text-red-500">*</span></label>
                        <input type="text" asp-for="ImageURl" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:ring-2 focus:ring-primary/50 outline-none" required />
                    </div>
                </div>

                <div class="mt-4">
                    <p class="text-xs font-bold text-slate-500 mb-2 uppercase">Mevcut Görsel Önizlemesi</p>
                    <img src="@Model.ImageURl" class="w-48 h-28 object-cover rounded-lg border border-slate-200 dark:border-[#3b4d54]" onerror="this.src='https://placehold.co/600x400?text=Gecersiz+URL'" />
                </div>

                <div class="flex items-center gap-3 pt-6 border-t border-slate-200 dark:border-[#3b4d54]">
                    <button type="submit" class="flex items-center gap-2 px-6 py-3 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity">
                        <span class="material-symbols-outlined text-[20px]">check</span> Değişiklikleri Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>