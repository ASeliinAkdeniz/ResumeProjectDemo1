@model List<ResumeProjectDemo1.Entities.Skill>
@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section id="skills">
    <div class="flex-1 overflow-y-auto p-8">
        <div class="max-w-6xl mx-auto space-y-8">
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div>
                    <h3 class="text-3xl font-black tracking-tight">Yetenek Listesi</h3>
                    <p class="text-slate-500 dark:text-[#9db2b9] mt-1">
                        Teknik yeteneklerinizi ve hakimiyet oranlarını yönetin.
                    </p>
                </div>
                <a href="/Skill/CreateSkill/" class="flex items-center gap-2 px-5 py-2.5 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity">
                    <span class="material-symbols-outlined text-[20px]">add</span>
                    Yeni Yetenek Ekle
                </a>
            </div>

            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-slate-50 dark:bg-[#1c2427] border-b border-slate-200 dark:border-[#3b4d54]">
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500">#</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500">Yetenek</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500">Hakimiyet Oranı</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 text-right"></th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200 dark:divide-[#3b4d54]">
                            @foreach (var item in Model)
                            {
                                // Renk belirleme mantığı
                                string progressColor = "bg-green-500";
                                if (item.Value <= 25) progressColor = "bg-red-500";
                                else if (item.Value <= 50) progressColor = "bg-yellow-500";
                                else if (item.Value <= 75) progressColor = "bg-blue-500";

                                <tr class="hover:bg-slate-50/50 dark:hover:bg-white/5 transition-colors group">
                                    <td class="px-6 py-5 font-semibold text-sm">@item.SkillID</td>
                                    <td class="px-6 py-5 font-bold text-sm">@item.Title</td>
                                    <td class="px-6 py-5">
                                        <div class="flex items-center gap-4">
                                            <div class="flex-1 h-3 bg-slate-100 dark:bg-[#1c2427] rounded-full overflow-hidden border border-slate-200 dark:border-[#3b4d54]">
                                                <div class="@progressColor h-full rounded-full transition-all duration-500"
                                                     style="width: @item.Value%"></div>
                                            </div>
                                            <span class="text-xs font-black w-8">%@item.Value</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5 text-right space-x-2">
                                    <td class="px-6 py-5 text-right space-x-2">
                                        
                                        <a href="/Skill/DeleteSkill/@item.SkillID/" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-red-500 hover:bg-red-600 text-white rounded-lg font-medium text-xs transition-colors">
                                            <span class="material-symbols-outlined text-[16px]">delete</span>
                                            Sil
                                        </a>
                                        <a href="/Skill/UpdateSkill/@item.SkillID/" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-500 hover:bg-green-600 text-white rounded-lg font-medium text-xs transition-colors">
                                            <span class="material-symbols-outlined text-[16px]">edit</span>
                                            Güncelle
                                        </a>

                                    </td>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>