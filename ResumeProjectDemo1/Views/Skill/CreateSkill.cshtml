@model ResumeProjectDemo1.Entities.Skill
@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center gap-4">
            <a href="/Skill/SkillList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <div>
                <h3 class="text-3xl font-black tracking-tight">Yeni Yetenek Ekle</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Listenize yeni bir teknik yetenek tanımlayın.</p>
            </div>
        </div>

        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-bold mb-2">Yetenek Başlığı</label>
                            <input type="text" asp-for="Title" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none focus:ring-2 focus:ring-primary/50" placeholder="Örn: C#, React, SQL" required />
                        </div>

                        <div>
                            <label class="block text-sm font-bold mb-2">Hakimiyet Oranı (0-100)</label>
                            <input type="number" asp-for="Value" min="0" max="100" class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none focus:ring-2 focus:ring-primary/50" placeholder="85" required />
                        </div>
                    </div>

                    <div class="flex items-center gap-3 pt-6 border-t border-slate-200 dark:border-[#3b4d54]">
                        <button type="submit" class="flex items-center gap-2 px-6 py-3 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity">
                            <span class="material-symbols-outlined text-[20px]">save</span>
                            Yetenek Kaydet
                        </button>
                        <a href="/Skill/SkillList/" class="px-6 py-3 bg-slate-100 dark:bg-[#1c2427] rounded-lg font-bold text-sm">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


