@model List<ResumeProjectDemo1.Entities.Education>
@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section id="education">
    <div class="flex-1 overflow-y-auto p-8">
        <div class="max-w-5xl mx-auto space-y-8">
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div>
                    <h3 class="text-3xl font-black tracking-tight">Eğitim Yolculuğum</h3>
                    <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Akademik geçmişinizi kronolojik olarak yönetin.</p>
                </div>
                <a href="/Education/CreateEducation/" class="flex items-center gap-2 px-5 py-2.5 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity shadow-lg shadow-primary/20">
                    <span class="material-symbols-outlined text-[20px]">school</span>
                    Yeni Eğitim Ekle
                </a>
            </div>

            <div class="relative space-y-8 before:absolute before:inset-0 before:ml-5 before:-translate-x-px md:before:mx-auto md:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-slate-200 before:via-slate-300 before:to-transparent dark:before:from-[#1c2427] dark:before:via-[#3b4d54] dark:before:to-transparent">

                @foreach (var item in Model)
                {
                    <div class="relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group">

                        <div class="flex items-center justify-center w-10 h-10 rounded-full border-4 border-white dark:border-[#111618] bg-slate-200 dark:bg-[#3b4d54] text-slate-500 group-hover:bg-primary group-hover:text-background-dark shadow shrink-0 md:order-1 md:group-odd:-translate-x-1/2 md:group-even:translate-x-1/2 transition-all duration-300">
                            <span class="material-symbols-outlined text-[18px]">history_edu</span>
                        </div>

                        <div class="w-[calc(100%-4rem)] md:w-[45%] bg-white dark:bg-[#111618] p-6 rounded-2xl border border-slate-200 dark:border-[#3b4d54] shadow-sm hover:shadow-md hover:border-primary/40 transition-all duration-300">
                            <div class="flex items-center justify-between mb-3">
                                <span class="px-3 py-1 bg-slate-100 dark:bg-[#1c2427] text-primary text-[11px] font-black rounded-full uppercase tracking-widest">
                                    @item.StartYear — @(item.EndYear.HasValue ? item.EndYear.Value.ToString() : "Devam Ediyor")
                                </span>

                                <div class="flex gap-1">
                                    <a href="/Education/UpdateEducation/@item.ID" class="p-1.5 text-slate-400 hover:text-green-500 transition-colors">
                                        <span class="material-symbols-outlined text-[18px]">edit_square</span>
                                    </a>
                                    <a href="/Education/DeleteEducation/@item.ID" class="p-1.5 text-slate-400 hover:text-red-500 transition-colors">
                                        <span class="material-symbols-outlined text-[18px]">delete_forever</span>
                                    </a>
                                </div>
                            </div>

                            <h4 class="text-xl font-bold text-slate-800 dark:text-white mb-1">@item.Title</h4>
                            <div class="flex items-center gap-2 text-slate-500 dark:text-[#9db2b9]">
                                <span class="material-symbols-outlined text-[16px]">account_balance</span>
                                <span class="text-sm font-medium italic">@item.Departmant</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>