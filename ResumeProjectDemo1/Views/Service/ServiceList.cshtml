@model List<ResumeProjectDemo1.Entities.Service>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section id="services">
    <div class="flex-1 overflow-y-auto p-8">
        <div class="max-w-6xl mx-auto space-y-8">
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div>
                    <h3 class="text-3xl font-black tracking-tight">Hizmetlerim</h3>
                    <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Sunduğunuz profesyonel hizmetleri yönetin.</p>
                </div>
                <a href="/Service/CreateService/" class="flex items-center gap-2 px-5 py-2.5 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-all">
                    <span class="material-symbols-outlined text-[20px]">add_circle</span>
                    Yeni Hizmet Ekle
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var item in Model)
                {
                    <div class="group relative bg-white dark:bg-[#111618] rounded-2xl border border-slate-200 dark:border-[#3b4d54] p-6 hover:border-primary/50 transition-all duration-300 shadow-sm hover:shadow-md">

                        <div class="w-14 h-14 rounded-xl bg-slate-50 dark:bg-[#1c2427] flex items-center justify-center mb-4 group-hover:bg-primary/10 transition-colors">
                            @if (!string.IsNullOrEmpty(item.IconUrl))
                            {
                                <img src="@item.IconUrl" class="w-8 h-8 object-contain" onerror="this.src='https://placehold.co/100x100?text=S'" />
                            }
                            else
                            {
                                <span class="material-symbols-outlined text-primary text-[32px]">design_services</span>
                            }
                        </div>

                        <h4 class="text-xl font-bold mb-2 text-slate-800 dark:text-white">@item.Title</h4>
                        <p class="text-sm text-slate-500 dark:text-[#9db2b9] leading-relaxed mb-6 line-clamp-3">
                            @item.Description
                        </p>

                        <div class="flex items-center gap-3 pt-4 border-t border-slate-50 dark:border-[#1c2427]">
                            <a href="/Service/UpdateService/@item.ServiceId" class="flex-1 flex items-center justify-center gap-1.5 py-2 bg-green-500/10 text-green-600 dark:text-green-400 rounded-lg text-xs font-bold hover:bg-green-500 hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[16px]">edit</span> Düzenle
                            </a>
                            <a href="/Service/DeleteService/@item.ServiceId" class="flex-1 flex items-center justify-center gap-1.5 py-2 bg-red-500/10 text-red-600 dark:text-red-400 rounded-lg text-xs font-bold hover:bg-red-500 hover:text-white transition-all">
                                <span class="material-symbols-outlined text-[16px]">delete</span> Sil
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

