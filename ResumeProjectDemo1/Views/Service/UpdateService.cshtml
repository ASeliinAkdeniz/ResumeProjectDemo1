@model ResumeProjectDemo1.Entities.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center gap-4">
            <a href="/Service/ServiceList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <h3 class="text-3xl font-black tracking-tight">Hizmeti Düzenle</h3>
        </div>

        <div class="bg-white dark:bg-[#111618] rounded-2xl border border-slate-200 dark:border-[#3b4d54] p-8 shadow-sm">
            <form method="post" class="space-y-6">
                <input type="hidden" asp-for="ServiceId" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-bold mb-2">Hizmet Başlığı</label>
                        <input type="text" asp-for="Title" class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none" required />
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-2">İkon URL</label>
                        <div class="flex gap-2">
                            <input type="text" asp-for="IconUrl" id="iconInputUpdate" class="flex-1 px-4 py-3 rounded-xl border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none" required />
                            <div class="w-[52px] h-[52px] rounded-xl border border-slate-200 dark:border-[#3b4d54] bg-slate-50 dark:bg-[#1c2427] flex items-center justify-center overflow-hidden">
                                <img id="iconPreviewUpdate" src="@Model.IconUrl" class="w-8 h-8 object-contain" onerror="this.src='https://placehold.co/100x100?text=!'" />
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold mb-2">Hizmet Açıklaması</label>
                    <textarea asp-for="Description" rows="6" class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none resize-none" required></textarea>
                </div>

                <div class="flex items-center gap-3 pt-6 border-t border-slate-100 dark:border-[#3b4d54]">
                    <button type="submit" class="flex items-center gap-2 px-8 py-3 bg-green-500 text-white rounded-xl font-bold text-sm hover:bg-green-600 transition-all">
                        <span class="material-symbols-outlined text-[20px]">sync</span>
                        Güncellemeyi Kaydet
                    </button>
                    <a href="/Service/ServiceList/" class="px-8 py-3 bg-slate-100 dark:bg-[#1c2427] text-slate-600 rounded-xl font-bold text-sm">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('iconInputUpdate').addEventListener('input', function() {
        document.getElementById('iconPreviewUpdate').src = this.value;
    });
</script>