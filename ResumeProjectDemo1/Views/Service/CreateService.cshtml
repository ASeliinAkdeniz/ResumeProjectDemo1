@model ResumeProjectDemo1.Entities.Service
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center gap-4">
            <a href="/Service/ServiceList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <div>
                <h3 class="text-3xl font-black tracking-tight">Yeni Hizmet Tanımla</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Sunduğunuz yetenekleri bir hizmet başlığı altında toplayın.</p>
            </div>
        </div>

        <div class="bg-white dark:bg-[#111618] rounded-2xl border border-slate-200 dark:border-[#3b4d54] p-8 shadow-sm">
            <form method="post" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-bold mb-2">Hizmet Başlığı</label>
                        <input type="text" asp-for="Title" class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none focus:ring-2 focus:ring-primary/50" placeholder="Örn: Web Geliştirme" required />
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-2">İkon URL (Görsel Linki)</label>
                        <div class="flex gap-2">
                            <input type="text" asp-for="IconUrl" id="iconInput" class="flex-1 px-4 py-3 rounded-xl border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none focus:ring-2 focus:ring-primary/50" placeholder="https://..." required />
                            <div class="w-[52px] h-[52px] rounded-xl border border-slate-200 dark:border-[#3b4d54] bg-slate-50 dark:bg-[#1c2427] flex items-center justify-center overflow-hidden">
                                <img id="iconPreview" src="https://placehold.co/100x100?text=?" class="w-8 h-8 object-contain" />
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold mb-2">Hizmet Detayı</label>
                    <textarea asp-for="Description" rows="5" class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] outline-none focus:ring-2 focus:ring-primary/50 resize-none" placeholder="Müşterilerinize sunduğunuz bu hizmetin kapsamını açıklayın..." required></textarea>
                </div>

                <div class="flex items-center gap-3 pt-6 border-t border-slate-100 dark:border-[#3b4d54]">
                    <button type="submit" class="flex items-center gap-2 px-8 py-3 bg-primary text-background-dark rounded-xl font-bold text-sm hover:opacity-90">
                        <span class="material-symbols-outlined text-[20px]">add_task</span>
                        Hizmeti Yayınla
                    </button>
                    <a href="/Service/ServiceList/" class="px-8 py-3 bg-slate-100 dark:bg-[#1c2427] text-slate-600 rounded-xl font-bold text-sm">Vazgeç</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('iconInput').addEventListener('input', function() {
        document.getElementById('iconPreview').src = this.value || 'https://placehold.co/100x100?text=?';
    });
</script>