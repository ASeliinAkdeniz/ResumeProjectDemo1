@model List<ResumeProjectDemo1.Entities.Skill>

<section id="skills" class="bg-light">
    <div class="container">
        <div class="row mb-8">
            <div class="col-lg-10 col-xl-8 mx-lg-auto text-center">
                <div class="section-title h2 mb-3">
                    <h2 class="mb-0">Yeteneklerim</h2>
                    <span class="title-letter">Y</span>
                </div>
                <p>
                    @* Buradaki açıklamayı da dinamik yapmak istersen başka bir tablodan çekebilirsin *@
                    Teknik yetkinliklerimi ASP.Net üzerindeki projelerle şekillendirirken, karmaşık algoritmaları çözme ve temiz kod yazma pratiklerine odaklanıyorum.
                    Arayüz geliştirmede Tailwind kullanıyor, arka planda ise MVC ile sağlam bir mantık yapısı kurguluyorum. Sürekli değişen teknoloji dünyasında, yeni kütüphaneleri ve
                    UI/UX standartlarını projelerime hızla adapte edebiliyorum.
                </p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <p class="h6 mb-1">@item.Title</p>
                    <div class="progress rounded-0" style="height:5px">
                        @* style="width: @item.Value%" kısmı çubuğu dinamik yapar *@
                        <div class="progress-bar" role="progressbar"
                             style="width: @item.Value%"
                             aria-valuenow="@item.Value"
                             aria-valuemin="0"
                             aria-valuemax="100">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>