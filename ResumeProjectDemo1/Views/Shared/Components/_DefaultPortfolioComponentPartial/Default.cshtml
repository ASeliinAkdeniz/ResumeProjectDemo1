@model List<ResumeProjectDemo1.Entities.Portfolio>
<section id="portfolio">
    @await Component.InvokeAsync("_DefaultCategoryComponentPartial")
    <div class="container">
        <div class="portfolio-container isotope-container row my-n2 mx-sm-n2">
            @foreach (var item in Model)
            {
                @* ÖNEMLİ: "web" yazan statik sınıfı silip yerine dinamik kategori ID'sini ekliyoruz *@
                <div class="isotope-item col-sm-6 col-lg-4 py-2 px-sm-2 cat-@item.CategoryId">
                    <div class="portfolio-item details-inside">
                        <a href="#">
                            <div class="item-media">
                                <img src="@item.ImageURl" alt="">
                            </div>
                            <div class="item-overlay bg-dark"></div>
                            <div class="item-details">
                                <h4 class="h5">@item.Title</h4>
                                @* Eğer Portfolio entity içinde Category varsa adını da yazdırabilirsin *@
                                <p class="font-italic">@item.Category?.CategoryName</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>