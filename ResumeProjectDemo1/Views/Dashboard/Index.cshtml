@model List<ResumeProjectDemo1.Entities.Message>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8 text-white">
    <div class="max-w-7xl mx-auto">

        <div class="bg-white dark:bg-[#111618] rounded-3xl border border-slate-200 dark:border-[#3b4d54] p-8 mb-10 shadow-2xl flex flex-col md:flex-row items-center gap-8">
            <div class="relative">
                <div class="w-24 h-24 rounded-2xl overflow-hidden border-2 border-primary p-1">
                    <img src="@ViewBag.AdminImage" class="w-full h-full object-cover rounded-xl" alt="Profil">
                </div>
                <span class="absolute -bottom-2 -right-2 bg-green-500 w-5 h-5 rounded-full border-4 border-[#111618]"></span>
            </div>
            <div class="text-center md:text-left">
                <h3 class="text-3xl font-black tracking-tight">Hoş Geldin, @ViewBag.AdminFullName!</h3>
                <p class="text-primary font-medium">@ViewBag.AdminTitle</p>
            </div>
            <div class="md:ml-auto flex gap-4">
                <div class="text-right">
                    <p class="text-xs text-slate-500 uppercase font-bold tracking-widest">Sistem Saati</p>
                    <p class="text-lg font-mono">@DateTime.Now.ToString("HH:mm")</p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
            @foreach (var stat in new[] {
            new { Title = "Mesajlar", Value = ViewBag.MsgCount, Icon = "mail", Color = "text-blue-400" },
            new { Title = "Yetenekler", Value = ViewBag.SkillCount, Icon = "bolt", Color = "text-yellow-400" },
            new { Title = "Eğitimler", Value = ViewBag.EduCount, Icon = "school", Color = "text-green-400" },
            new { Title = "Projeler", Value = ViewBag.ProjectCount, Icon = "folder_special", Color = "text-purple-400" }
            })
            {
                <div class="bg-[#111618] p-6 rounded-2xl border border-[#3b4d54] hover:border-primary/50 transition-all group shadow-lg">
                    <div class="flex justify-between items-start">
                        <div>
                            <h4 class="text-3xl font-black group-hover:scale-110 transition-transform">@stat.Value</h4>
                            <p class="text-xs font-bold text-slate-500 uppercase mt-1">@stat.Title</p>
                        </div>
                        <span class="material-symbols-outlined @stat.Color opacity-50">@stat.Icon</span>
                    </div>
                </div>
            }
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <div class="lg:col-span-2 bg-[#111618] rounded-3xl border border-[#3b4d54] p-8 shadow-xl">
                <div class="flex justify-between items-center mb-8">
                    <h4 class="text-xl font-black flex items-center gap-3">
                        <span class="w-2 h-8 bg-primary rounded-full"></span>
                        Gelen Kutusu
                    </h4>
                    <a href="/Message/MessageList" class="text-xs font-bold text-primary hover:opacity-80">Hepsini Gör</a>
                </div>

                <div class="space-y-4">
                    @foreach (var msg in Model)
                    {
                        <div class="flex items-center gap-4 p-4 rounded-2xl bg-[#1a2124]/50 border border-transparent hover:border-[#3b4d54] transition-all">
                            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold">
                                @msg.NameSurname[0]
                            </div>
                            <div class="flex-1">
                                <div class="flex justify-between">
                                    <h5 class="font-bold text-sm">@msg.NameSurname</h5>
                                    <span class="text-[10px] text-slate-500">@msg.SendDate.ToShortDateString()</span>
                                </div>
                                <p class="text-xs text-[#9db2b9] line-clamp-1 mt-1">@msg.MessageDetail</p>
                            </div>
                            @if (!msg.IsRead)
                            {
                                <span class="w-2 h-2 bg-primary rounded-full shadow-[0_0_10px_#primary]"></span>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="space-y-8">
                <div class="bg-[#111618] rounded-3xl border border-[#3b4d54] p-8 shadow-xl">
                    <h4 class="text-xl font-black mb-6 italic">Kısayollar</h4>
                    <div class="space-y-3">
                        <a href="/Portfolio/CreatePortfolio" class="flex items-center justify-between p-4 rounded-xl bg-primary text-black font-bold hover:brightness-110 transition-all">
                            <span>Yeni Proje Ekle</span>
                            <span class="material-symbols-outlined">add</span>
                        </a>
                        <a href="/Experience/ExperienceList" class="flex items-center justify-between p-4 rounded-xl border border-[#3b4d54] hover:bg-white/5 transition-all">
                            <span>Deneyimleri Düzenle</span>
                            <span class="material-symbols-outlined">work</span>
                        </a>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-primary/20 to-transparent rounded-3xl border border-primary/20 p-8">
                    <p class="text-xs font-bold uppercase tracking-widest text-primary mb-2">Sistem Notu</p>
                    <p class="text-sm italic text-[#9db2b9]">"Kod yazmak, sessizce şiir yazmak gibidir. Bugün yeni bir şeyler üretmeye ne dersin?"</p>
                </div>
            </div>

        </div>
    </div>
</div>